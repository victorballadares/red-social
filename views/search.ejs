<%- include('templates/header.ejs') %>
    <% if(typeof(error) != "undefined"){ %>
        <%= error %>
            <% } %>
                <main>
                    <a href="/main"><img src="/img/atras.png" alt="imagen para retroceder"></a>
                    <div class="user">
                        <% for(var i=0; i<users.length; i++) { %>
                            <a href="/main/profile/<%= users[i]._id %>">
                                <div>
                                    <img src="data:image/png;base64,<%= users[i].img %>" alt="">
                                    <p>
                                        <%= users[i].username %>
                                    </p>
                                </div>
                            </a>
                            <% } %>
                    </div>

                    <div class="feed">
                        <% for(var i=0; i<posts.length; i++) { %>
                            <div class="post">
                                <img src="data:image/png;base64,<%= posts[i].img %>" alt="">
                                <p>
                                    <%= posts[i].title %>
                                </p>
                            </div>
                            <% } %>
                    </div>
                    <%- include('templates/footer.ejs') %>